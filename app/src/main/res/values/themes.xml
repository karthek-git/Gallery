<resources>
	<style name="Theme.Gallery" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">#1A73E8</item>
	</style>

	<style name="ThemeOverlay.Gallery.FullscreenContainer" parent="">
		<item name="fullscreenBackgroundColor">@color/light_blue_600</item>
		<item name="fullscreenTextColor">@color/light_blue_A200</item>
	</style>

	<style name="Theme.Gallery.Fullscreen" parent="Theme.Gallery">
		<item name="android:actionBarStyle">@style/Widget.Theme.Gallery.ActionBar.Fullscreen</item>
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="BlackSanUI" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:statusBarColor">@color/white</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="windowActionBarOverlay">true</item>
		<item name="android:windowBackground">@android:color/white</item>
		<item name="android:windowActivityTransitions">true</item>
		<item name="alertDialogTheme">@style/BlackSanUI.Dialog</item>
	</style>

	<style name="BlackSanUI.Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
		<item name="windowNoTitle">true</item>
		<item name="android:background">@color/colorLiiDark</item>
		<item name="dialogCornerRadius">14dp</item>
		<item name="android:windowSoftInputMode">stateVisible</item>
		<item name="android:windowAnimationStyle">@style/BlackSanUI_Dialog_show</item>
	</style>

	<style name="BlackSanUI_Dialog_show">
		<item name="android:windowEnterAnimation">@null</item>
	</style>

	<style name="BlackSanUI.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="BlackSanUI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="BlackSanUI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>