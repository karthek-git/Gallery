<resources>
	<style name="Theme.Gallery" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">#8AB4F8</item>
	</style>

	<style name="ThemeOverlay.Gallery.FullscreenContainer" parent="">
		<item name="fullscreenBackgroundColor">@color/light_blue_900</item>
		<item name="fullscreenTextColor">@color/light_blue_A400</item>
	</style>

	<style name="BlackSanUI" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="colorPrimary">#8AB4F8</item>
		<item name="windowActionBarOverlay">true</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="actionBarStyle">@style/BlackSanUI.ActionBar</item>
		<item name="actionModeBackground">@color/black</item>
		<item name="actionModeCloseDrawable">@drawable/ic_cab_close</item>
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowActivityTransitions">true</item>
		<item name="alertDialogTheme">@style/BlackSanUI.Dialog</item>
	</style>

	<style name="BlackSanUI.Dialog" parent="Theme.AppCompat.Dialog.Alert">
		<item name="windowNoTitle">true</item>
		<item name="android:background">@color/colorLiiDark</item>
		<item name="dialogCornerRadius">14dp</item>
		<item name="android:windowSoftInputMode">stateVisible</item>
		<item name="android:windowAnimationStyle">@style/BlackSanUI_Dialog_show</item>
	</style>

	<style name="BlackSanUI_Dialog_show">
		<item name="android:windowEnterAnimation">@null</item>
	</style>

	<style name="BlackSanUI.Fullscreen" parent="android:Theme.Black.NoTitleBar.Fullscreen">
		<item name="android:windowFullscreen">true</item>
	</style>
</resources>